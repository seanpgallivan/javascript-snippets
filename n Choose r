// n Choose r (combinatorics)
// formula: n! / (r! * (n - r)!)
const nCr = (n, r) => {
    let res = 1, i = 1
    for (n++; i <= r; i++)
        res *= (n - i) / i
    return res
}


// n-th k-Simplex Number (Pascal's triangle)
// (n + k - 1)! / (n! * (k - 1)!)
const nthKSimplex = (n, k) => {
    let res = 1, i = 1
    for (n--; i <= k; i++)
        res *= (n + i) / i
    return res
}
