// n Choose r (combinatorics)
// formula: n! / (r! * (n - r)!)
const nCr = (n, r) => {
    let res = 1, i = 1
    for (n++; i <= r; i++)
        res *= (n - i) / i
    return res
}


// n-th k-Simplex Number (Pascal's triangle)
// formula: (n + k)! / (n! * k!)
const nthKSimplex = (n, k) => {
    let res = 1, i = 1
    for (n--; i <= k; i++)
        res *= (n + i) / i
    return res
}
